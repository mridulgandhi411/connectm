<%- include('header'); -%>

<body class="bg-gradient-primary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-9 col-lg-12 col-xl-10">
                <div class="card shadow-lg o-hidden border-0 my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-flex mainBox">
                              <div class="col-lg-6 flex-grow-1 left-part" >
                                  <img src="https://media.giphy.com/media/Y0y6wE9GYhTdL7gWle/giphy.gif" class="inviteGIF" height="250" width="250" alt="">
                              </div>
                            </div>
                            <div class="col-lg-6 mainBox">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h4 class="mb-4"><img src="/img/B.jpg"  height="40%" width="75%"  alt=""></h4>
                                        <img src="/img/LOH.jpg"  style="margin-bottom:4%; border-radius:100%;" alt="">
                                    </div>
                                    <form class="user" action="/login" method="POST">
                                        <div class="form-group"><input class="form-control form-control-user" type="email" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter Email Address" name="username"></div>
                                        <div class="form-group"><input class="form-control form-control-user" type="password" id="exampleInputPassword" placeholder="Password" name="password"></div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <div class="form-check rememberButton"><input type="checkbox" id="switch" class="toggleSwitch" /><label class="toggleSwitch" for="switch">Toggle</label></div>
                                                <p style="position:absolute; left:38px; botttom:-9px;">Remember Me</p>
                                            </div>
                                        </div><button class="btn btn-primary text-white" type="submit" name="loginButton">Login</button>
                                        <hr><a class="btn btn-primary text-white btn-google btn-user" role="button"><i class="fab fa-google"></i>&nbsp; Login with Google</a><a class="btn btn-primary btn-block text-white btn-facebook btn-user" role="button"><i class="fab fa-facebook-f"></i>&nbsp; Login with Facebook</a>
                                        <hr>
                                    </form>
                                    <div class="text-center"><a class="small" href="/forgot-password">Forgot Password?</a></div>
                                    <div class="text-center"><a class="small" href="/register">Create an Account!</a></div>

                                </div>
                                    <span class="WeCBR">From WeCBR</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.js"></script>
    <script src="assets/js/theme.js"></script>
</body>

</html>
